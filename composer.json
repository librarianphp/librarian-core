{
  "name": "librarianphp/librarian-core",
  "type": "library",
  "description": "Core Librarian Package",
  "license": "MIT",
  "homepage": "https://github.com/librarianphp/librarian-core",
  "autoload": {
    "psr-4": {
      "Librarian\\": "src/"
    }
  },
  "require": {
    "ext-curl": "*",
    "ext-json": "*",
    "minicli/curly": "^0.2.0",
    "minicli/minicache": "^0.2.0",
    "librarianphp/parsed": "^0.3.0",
    "minicli/minicli": "^3.0",
    "twig/twig": "^3.0"
  },
  "require-dev": {
    "pestphp/pest": "^1.0",
    "friendsofphp/php-cs-fixer": "^3.16"
  },
  "scripts": {
    "test" : ["pest"],
    "csfix": ["php-cs-fixer fix"]
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
